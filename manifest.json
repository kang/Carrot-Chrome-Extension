{
  "manifest_version": 2,

  "name": "Money Extender Chrome Extension",
  "description": "This extension helps users to save instead of spend",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": ["overlay.html"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["popupMessageHandler.js"]
    }
  ]
}
